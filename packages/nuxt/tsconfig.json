{
  "extends": "./.nuxt/tsconfig.json",
  "exclude": ["dist", "node_modules", "playground"],
  "alias": {
    "@/types": "./src/types"
  },
  "compilerOptions": {
    "baseUrl": ".",
    "outDir": "./dist",
    "paths": {
      "~/*": ["./*"],
      "@/*": ["src/*"],
      "@nuxt-compose-icons": ["./src/*"],
      "@nuxt-compose-icons/utils": ["./src/runtime/utils/*"],
      "@nuxt-compose-icons/assets": ["./src/runtime/assets/*"]
    }
  },
  "include": [
    "**/*",
    "src/**/*",
    "../../src/**/*",
    "../../src/runtime/**/*",
    "../../src/runtime/assets/**/*",
    "../../src/runtime/utils/**/*",
    "../../eslint.config.mjs"
  ]
}
